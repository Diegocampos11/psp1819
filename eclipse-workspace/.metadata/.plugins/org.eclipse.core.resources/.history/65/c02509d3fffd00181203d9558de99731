package recordando;

public class Saludo{
	private String saludo = "DEFAULT";
	private int i = 0;

	public int getI() {
		return i;
	}

	public void setI(int i) {
		this.i = i;
	}

	public synchronized String getSaludo() {
		return saludo;
	}

	public synchronized void setSaludo(String saludo) {
		this.saludo = saludo;
		this.i++;
	}

	@Override
	public String toString() {
		return "Saludo [saludo=" + saludo + "]";
	}

	public Saludo(String saludo) {
		super();
		this.saludo = saludo;
	}


	public Saludo() {
		super();
	}
	
}
